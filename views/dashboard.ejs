<% include header %>

<h2>Welcome, <%= session.user.firstname%> <%= session.user.lastname%>!</h2>

<% if (json.length === 0) { %>
  <p>No saved legislators found.</p>
<% } else {%>
  <p><strong>Saved legislators:</strong></p>
  <% for (var i = 0; i < json.length; i++) { %>
    <ul>
      <li><a href="/search/<%= json[i]["idLeg"] %>"><%= json[i]["name"] %></a>
      </li>
        <!-- <ul>
          <li>Twitter: <a href="https://twitter.com/<%= json[i]["twitter_id"] %>" target="_blank"><%= json[i]["twitter_id"] %></a></li>
          <li>Party: <%= json[i]["party"] %> </li>
        </ul> -->
    </ul>
  <% } %>
<% } %>

<% if (bills.length === 0) { %>
  <p>No saved bills found.</p>
<% } else {%>
  <p><strong>Saved bills:</strong></p>
  <% for (var i = 0; i < bills.length; i++) { %>
    <ul>
      <li><%= bills[i]["name"] %>
      </li>
    </ul>
  <% } %>
<% } %>

<% include footer %>